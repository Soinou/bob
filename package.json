    },
    "license": "MIT",
    "engines": {
        "node": ">=6.0.0"
    },
    "scripts": {
        "build": "tsc -b",
        "watch:clean": "tsc -p ./packages/bobpack-clean -w",
        "watch:core": "tsc -p ./packages/bobpack-core -w",
        "watch:css": "tsc -p ./packages/bobpack-css -w",
        "watch:handlebars": "tsc -p ./packages/bobpack-handlebars -w",
        "watch:html": "tsc -p ./packages/bobpack-html -w",
        "watch:pug": "tsc -p ./packages/bobpack-pug -w",
        "watch:sass": "tsc -p ./packages/bobpack-sass -w",
        "watch:serve": "tsc -p ./packages/bobpack-serve -w",
        "watch:stylus": "tsc -p ./packages/bobpack-stylus -w",
        "watch:typescript": "tsc -p ./packages/bobpack-typescript -w",
        "watch:vue": "tsc -p ./packages/bobpack-vue -w",
        "watch": "run-p -l watch:*"
    },
    "dependencies": {
        "@types/node": "^10.9.4",
        "clean-webpack-plugin": "^0.1.19",
        "npm-run-all": "^4.1.3",
        "thread-loader": "^1.2.0",
        "ts-loader": "^5.1.0",
        "tslib": "^1.9.3",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
