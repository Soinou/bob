{
    "compilerOptions": {
        "importHelpers": true,
        "lib": ["es6", "es7", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "pretty": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es5",
        "types": ["node"]
    },
    "exclude": ["node_modules"],
    "include": ["./packages/**/*.ts"]
}
