{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "./types",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["es6", "es7", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "paths": { "@bob/*": ["./packages/*"] },
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": false,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "types": ["node"]
    },
    "exclude": ["node_modules"],
    "include": ["./packages/**/*.ts"]
}
