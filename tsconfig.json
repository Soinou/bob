{
    "compilerOptions": {
        "baseUrl": ".",
        "importHelpers": true,
        "lib": ["es6", "es7", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "outDir": "./bin",
        "paths": { "@bob/*": ["./packages/*"] },
        "pretty": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "types": ["node"]
    },
    "exclude": ["node_modules"],
    "include": ["./packages/**/*.ts"]
}
